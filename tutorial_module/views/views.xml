<odoo>
    <data>
        <record id="tutorial_view_form" model="ir.ui.view">
            <field name="name">tutorial_view_form</field>
            <field name="model">tutorial.module</field>
            <field name="arch" type="xml">
                <form string="tutorial_form">
                    <sheet>
                        <group>
                            <field name="name"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tutorial_view_tree" model="ir.ui.view">
            <field name="name">tutorial_view_form</field>
            <field name="model">tutorial.module</field>
            <field name="arch" type="xml">
                <tree string="tutorial_form">
                    <field name="name"/>

                </tree>
            </field>
        </record>
        <record id="tutorial_action" model="ir.actions.act_window">
            <field name="name">Tutorial</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tutorial.module</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="tutorial_menu_action"  action="tutorial_action" sequence="4"/>
    </data>
</odoo>